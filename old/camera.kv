#:kivy 1.0
<MyLayout>:
    orientation: 'vertical'
    size: root.width, root.height

    GridLayout:
        rows: 3

        RelativeLayout:
            size_hint: 1, 0.8
            AndroidCamera:
                index: 0
                id: a_cam
                resolution: self.camera_resolution
                allow_stretch: True
                play: True
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: app.rotation
                        origin: self.center
                    Scale:
                        x: self.cam_ratio
                        y: self.cam_ratio
                        origin: self.center
                canvas.after:
                    PopMatrix
                    Rotate:
                        angle: app.rotation
                        origin: self.center
                    Scale:
                        x: self.cam_ratio
                        y: self.cam_ratio
                        origin: self.center
                    CropCam:
                        index: 0
                        id: crop_cam
                        resolution: self.crop_camera_resolution
                        allow_stretch: True
                        play: True

        Label:
            size_hint: 1, 0.2
            id: frame_counter
            font_size: self.height * 0.4
            text: ''
        Button:
            id: btn_capture
            text: 'Capture'
            size_hint: 1, 0.2
            on_press: root.capture()